---
import { getTagsWithCounts } from "@/lib/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { TagList } from "@/components/ui/TagList";

const tags = await getTagsWithCounts();
---

<BaseLayout title="Tags - Article Categories">
  <section class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Tags</h1>
    <p class="text-muted-foreground mb-8">
      Browse all article categories. Click on a tag to view all articles associated with it.
    </p>
    
    <div class="flex flex-wrap gap-3">
      <TagList tags={tags} />
    </div>
  </section>
</BaseLayout>
