---
import { Moon, Sun } from "lucide-react";
import { Button } from "@/components/ui/button";
---

<Button variant="ghost" size="icon" id="themeToggle" data-default-theme="{SiteConfig.theme}">
  <Sun id="sunIcon" className="size-6" />
  <Moon id="moonIcon" className="size-5 hidden" />
  <span class="sr-only">Toggle theme</span>
</Button>

<script is:inline>
  const defaultTheme = document.getElementById('themeToggle').dataset.defaultTheme || 'dark'

  const applyTheme = (isDark) => {
    document.documentElement.classList.toggle("dark", isDark);
    updateIcons(isDark);
  };

  const setInitialTheme = () => {
    const storedTheme = localStorage?.getItem("theme");
    if (storedTheme) {
      applyTheme(storedTheme === "dark");
    } else {
      applyTheme(defaultTheme === "dark");
    }
  };

  const updateIcons = (isDark) => {
    const sunIcon = document.getElementById("sunIcon");
    const moonIcon = document.getElementById("moonIcon");
    if (sunIcon && moonIcon) {
      sunIcon.style.display = isDark ? "none" : "inline";
      moonIcon.style.display = isDark ? "inline" : "none";
    }
  };

  const setupToggleButton = () => {
    const button = document.getElementById("themeToggle");
    if (!button) return;

    button.addEventListener("click", () => {
      const isDark = document.documentElement.classList.toggle("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
      updateIcons(isDark);
    });
  };

  setInitialTheme();
  setupToggleButton();
</script>
